# ConnectShare MVP Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Private key for deployment (without 0x prefix)
# ⚠️  NEVER commit your actual private key to version control
PRIVATE_KEY=your_private_key_here

# Ape Chain RPC URLs (use appropriate URL for your network)
APECHAIN_RPC_URL=https://apechain.calderachain.xyz/http
APECHAIN_TESTNET_RPC_URL=https://curtis.apechain.calderachain.xyz/http

# API Keys for contract verification
APECHAIN_API_KEY=your_apechain_api_key
APECHAIN_TESTNET_API_KEY=your_apechain_testnet_api_key

# Gas reporting
REPORT_GAS=true

# Coinmarketcap API key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# React App Environment
REACT_APP_ENV=development

# Contract Address (will be set after deployment)
REACT_APP_CONNECTSHARE_MVP_ADDRESS=

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
REACT_APP_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===========================================
# GHANA-SPECIFIC SETTINGS
# ===========================================

# Mobile Money Providers
MOBILE_MONEY_PROVIDERS=MTN Mobile Money,Vodafone Cash,AirtelTigo Money

# Currency Settings
BWD_TO_GHS_RATE=0.5
MINIMUM_WITHDRAWAL_BWD=1
MAXIMUM_WITHDRAWAL_BWD=10000

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable development features
USE_MOCK_DATA=true
ENABLE_LOGGING=true

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable MVP Features
FEATURE_AI_ASSISTANT=true
FEATURE_MOBILE_MONEY=true
FEATURE_REGIONAL_BONUSES=true
