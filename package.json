{
  "name": "connectshare-mvp",
  "version": "1.0.0",
  "description": "ConnectShare MVP - Decentralized bandwidth sharing platform for Ghana",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:deployed": "hardhat run scripts/test-deployed-contract.js",
    "test:comprehensive": "hardhat run scripts/comprehensive-mvp-test.js",
    "test:curtis": "hardhat run scripts/comprehensive-mvp-test.js --network curtis",
    "deploy:mvp": "hardhat run scripts/deploy-mvp.js",
    "deploy:apechain": "hardhat run scripts/deploy-mvp.js --network apechain",
    "deploy:curtis": "hardhat run scripts/deploy-mvp.js --network curtis",
    "verify:apechain": "hardhat verify --network apechain",
    "verify:curtis": "hardhat verify --network curtis",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install"
  },
  "keywords": ["blockchain", "ghana", "bandwidth", "mobile-money", "mvp"],
  "author": "ConnectShare Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.24.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^16.5.0"
  }
}
